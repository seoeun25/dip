<assembly>
    <id>distro</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- Distro files, readme, licenses, etc -->
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>dip-server-${project.version}/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/conf</directory>
            <outputDirectory>dip-server-${project.version}/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <!-- for tool -->
        <fileSet>
            <directory>${basedir}/../tool/bin</directory>
            <outputDirectory>dip-server-${project.version}/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../tool/target/</directory>
            <outputDirectory>dip-server-${project.version}/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- for oozie-sharelib -->
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>dip-server-${project.version}/oozie-sharelib</outputDirectory>
            <includes>
                <include>oozie-sharelib-readme.txt</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>


        <fileSet>
            <directory>${basedir}/../client/target/</directory>
            <outputDirectory>dip-server-${project.version}/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>dip-server-${project.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>

</assembly>
